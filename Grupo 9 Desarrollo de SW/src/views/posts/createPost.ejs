<%- include('../partials/_header'); %>

<h1 class="nombre-form">Crear Post</h1>

<form class="formulario" action="/posts/create" method="POST" enctype="multipart/form-data">
    <fieldset>

        <legend>Informacion General</legend>

        <div class="container-label">
            <label for="descripcion">Descripci√≥n:</label>
            <textarea name="descripcion" id="descripcion"></textarea>
        </div>
    
        <div class="container-label">
            <label for="foto">Foto:</label>
            <input type="file" name="foto" id="foto">
        </div>

        <div class="container-label">
           <label for="oficioId">Oficio:</label>
            <select id="oficioId" name="oficioId">
                <option selected disabled>-- Elige un oficio --</option>
                <% oficios.forEach(oficio => { %>
                    <option value="<%= oficio.idOficio %>"><%= oficio.nombre %></option>
                <% }) %>
            </select> 
        </div>
    </fieldset>

    <button type="submit">Crear Post</button>
</form>


<%- include('../partials/_footer'); %>
