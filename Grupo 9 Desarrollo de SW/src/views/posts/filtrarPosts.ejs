<%- include('../partials/_header'); %>
<main>
    <h1 class="nombre-form">Posts del oficio: <%= nombreOficio %></h1>

    <div class="container-filtro-posts">  
        <% posts.forEach(post => { %>
        <div class="post">

            <img src="/uploads/<%= post.foto %>" alt="Foto del post">
            
            <div class="datos-post"> 
                <a href="/perfiles/<%= post.Usuario_idUsuario %>">
                    <p><%= post.Usuario_idUsuario %></p>
                </a>
                
                <!--<p>VER PERFIL <%= post.Usuario_idUsuario %></p>-->
                <p><%= post.despcripcion %></p>
                <p>Valoracion: <%= post.valoracion %></p>
                <p><%= post.nombrePerfil %> <%= post.apellidoPerfil %></p>

                <p class="ver-perfil">
                    <a href="/perfiles/<%= post.Usuario_idUsuario %>" class="boton-amarillo-block">
                    Ver Perfil
                    </a>
                </p>
                
            </div><!--contenido-anuncio-->
        </div><!--anuncio-->
        <% }) %>
    </div>
</main>
<%- include('../partials/_footer'); %>
