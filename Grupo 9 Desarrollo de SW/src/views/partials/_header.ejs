<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/app.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Comfortaa:wght@300..700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <title>SKILL MARKET</title>
</head>
<body>
    <header>
        <div class="container-logo">
            <a href="/" class="logo">
                <p class="nombre">SKILL MARKET</p>
                <p class="slogan">Oficios Conectados</p>
            </a>
        </div>

        <div class="container-menu">
            <ul> 
                <li class="oficio">
                    <select id="oficioId" name="oficioId" onchange="location = '/posts/f/' + this.options[this.selectedIndex].text;">
                        <option disabled selected>Selecciona un oficio</option>
                        <% oficios.forEach(oficio => { %>
                        <option value="<%= oficio.idOficio %>" <%= oficio.idOficio === oficioSeleccionado?.idOficio ? 'selected' : '' %>><%= oficio.nombre %></option>
                        <% }) %>
                    </select>
                </li>

                <% if(login) { %>  
                    <li>
                        <a href="/perfiles/<%= usuarioIdLog %>">
                            <p>Ver mi perfil</p>
                        </a>
                    </li>
                    <li>
                        <a href="/chat">
                            <p>Mensajes</p>
                        </a>
                    </li>
                    <li>
                        <a href="/posts/create">
                            <p>Nuevo post</p>
                        </a>
                    </li>
                    <li>
                        <a href="/logout">
                            <p>Cerrar sesión</p>
                        </a>
                    </li>
               <% } else { %> 
                    <li>
                        <a href="/api/usuarios/create">
                            <p>Crear cuenta</p>
                        </a>
                    </li>
                    <li>
                        <a href="/login">
                            <p>Iniciar sesión</p>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
    </header>
